@page "/"

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.User.Claims.SingleOrDefault(claim => claim.Type == "RealName")?.Value</h1>
        <p>
            Welcome to chat app.
        </p>
    </Authorized>
    <NotAuthorized>
        <h1>Welcome </h1>

        <p>
            Register or login to use chat.
        </p>
    </NotAuthorized>
</AuthorizeView>