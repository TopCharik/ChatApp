@page "/"
@inject IJSRuntime JSRuntime
@inject CallStateContainer CallStateContainer

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.User.Identity.Name</h1>
        <p>
            Welcome to chat app.
        </p>
    </Authorized>
    <NotAuthorized>
        <h1>Welcome </h1>
        <p>
            Register or login to use chat.
        </p>
    </NotAuthorized>
</AuthorizeView>